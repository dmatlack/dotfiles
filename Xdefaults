! Useful Reference:
!   https://wiki.archlinux.org/index.php/X_resources

! Basic Term appearence
*externalBorder: 0
*internalBorder: 5
*borderLess: false
*scrollBar: false
URxvt*termName: rxvt-256color
!urxvt.xftAntialias: true
urxvt*cursorBlink: true
urxvt*cursorUnderline: false
urxvt*cursorColor: #FFAF00

! Color
#include "dotfiles/Xcolors/readable"

! Font
*font: xft:Terminus:pixelsize=13:antialias=true:hinting=true
*boldFont: xft:Terminus:pixelsize=13:antialias=true:hinting=true
URxvt.letterSpace: 1

URxvt.url-launcher: /usr/bin/chromium
URxvt.matcher.button: 1

! Perl
URxvt.perl-ext-common:  default,matcher,clipboard

! Copy and Paste!
!
! Also needs a perl script. See here: 
! http://nixmeal.wordpress.com/2012/07/24/copypaste-text-in-urxvt-rxvt-unicode-using-keyboard/
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False
